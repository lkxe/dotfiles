{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "source": "~/.config/fastfetch/arch.txt",
    //"source": "~/.config/fastfetch/arch.png",
    "height": 12,
    "padding": {
      "top": 1,
      "right": 6,
      "left": 2,
    },
    "color": { "1": "blue" },
  },
  "display": {
    "separator": " ",
  },
  "modules": [
    "break",
    {
      "type": "title",
      "color": {
        "user": "blue", // = color2
        "at": "blue",
        "host": "white",
      },
    },
    "break",
    {
      "type": "os",
      "key": " ",
      "keyColor": "blue", // = color3
    },
    {
      "type": "kernel",
      "key": " ",
      "keyColor": "blue",
    },
    {
      "type": "packages",
      "format": "{} (pacman)",
      "key": " ",
      "keyColor": "blue",
    },
    {
      "type": "shell",
      "key": " ",
      "keyColor": "blue",
    },
    {
      "type": "terminal",
      "key": " ",
      "keyColor": "blue",
    },
    {
      "type": "wm",
      "key": " ",
      "keyColor": "blue",
    },
    {
      "type": "uptime",
      "key": " ",
      "keyColor": "blue",
    },
    {
      "type": "command",
      "key": "󱦟 ",
      "keyColor": "blue",
      "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days",
    },
    {
      "type": "media",
      "key": "󰝚 ",
      "keyColor": "blue",
    },
    "break",
    {
      "type": "colors",
      "symbol": "circle",
    },
  ],
}
